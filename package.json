{
  "name": "blesaf-banking",
  "version": "1.0.0",
  "description": "BlÃ©Saf - Queue Management System for Banks",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:api": "pnpm --filter @blesaf/api dev",
    "dev:web": "pnpm --filter @blesaf/web dev",
    "build": "pnpm -r run build",
    "build:api": "pnpm --filter @blesaf/api build",
    "build:web": "pnpm --filter @blesaf/web build",
    "db:push": "pnpm --filter @blesaf/api db:push",
    "db:migrate": "pnpm --filter @blesaf/api db:migrate",
    "db:seed": "pnpm --filter @blesaf/api db:seed",
    "db:studio": "pnpm --filter @blesaf/api db:studio",
    "db:generate": "pnpm --filter @blesaf/api db:generate",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean && rimraf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
